<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HalcyonJuegoSensorial.viewLayer.SegundoDesafio.NivelesDesafio.ViewPrimerNivel">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <BoxView HeightRequest="25" Color="Transparent" /> <!-- Espacio de 20 unidades -->
            <Label Text="Nivel 1" FontSize="Large" HorizontalOptions="Center" />
            <ImageButton Source="fresa.png" Aspect="Fill" HeightRequest="205" WidthRequest="200" HorizontalOptions="CenterAndExpand" Clicked="OnImageClicked" />
            <Label Text="Yo rimo con esa, color de cereza, del suelo a la mesa te doy la sorpresa." FontSize="Body" HorizontalTextAlignment="Center" Padding="25"/>
            <Button Text="TOMATE" CornerRadius="15" WidthRequest="328" HorizontalOptions="Center" Clicked="OnIncorrectAnswerClicked" Margin="3" />
            <Button Text="FRESA" CornerRadius="15" WidthRequest="328" HorizontalOptions="Center" Clicked="OnCorrectAnswerClicked" Margin="3" />
            <Button Text="SANDÍA" CornerRadius="15" WidthRequest="328" HorizontalOptions="Center" Clicked="OnIncorrectAnswerClicked" Margin="3" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>