<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HalcyonJuegoSensorial.viewLayer.primerDesafio.NivelesDesafio.ViewPrimerNivel">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <BoxView HeightRequest="25" Color="Transparent" /> <!-- Espacio de 20 unidades -->
            <Label Text="Nivel 1" FontSize="Large" HorizontalOptions="Center" />
            <ImageButton Source="perro.webp" Aspect="Fill" HeightRequest="205" WidthRequest="200" HorizontalOptions="CenterAndExpand" Clicked="OnImageClicked" />
            <Label Text="Le gusta jugar, también ladrar y cuidar la casa cuando los amos no están." FontSize="Body" HorizontalTextAlignment="Center" Padding="25"/>
            <Button Text="PERRO" CornerRadius="15" WidthRequest="328" HorizontalOptions="Center" Clicked="OnCorrectAnswerClicked" Margin="3" />
            <Button Text="GATO" CornerRadius="15" WidthRequest="328" HorizontalOptions="Center" Clicked="OnIncorrectAnswerClicked" Margin="3" />
            <Button Text="TORTUGA" CornerRadius="15" WidthRequest="328" HorizontalOptions="Center" Clicked="OnIncorrectAnswerClicked" Margin="3" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>