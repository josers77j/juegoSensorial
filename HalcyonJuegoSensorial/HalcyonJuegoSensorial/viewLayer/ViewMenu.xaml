             x:Class="HalcyonJuegoSensorial.viewLayer.ViewMenu">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label x:Name="WelcomeLabel" />
            <Label x:Name="PuntajeLabel" FontSize="Medium" HorizontalOptions="Center" />
