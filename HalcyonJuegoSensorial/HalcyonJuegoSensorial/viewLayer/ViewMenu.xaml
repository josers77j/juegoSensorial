<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HalcyonJuegoSensorial.viewLayer.ViewMenu">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <BoxView HeightRequest="25" Color="Transparent" /> <!-- Espacio de 20 unidades -->
            <Label x:Name="WelcomeLabel" FontSize="Medium" HorizontalOptions="Center" Margin="15" />
            <Label x:Name="PuntajeLabel" FontSize="Large" HorizontalOptions="Center" FontAttributes="Bold" Margin="10" />
            <ImageButton Source="animales.png" Aspect="Fill" CornerRadius="15" HeightRequest="68" WidthRequest="328" HorizontalOptions="Center" Clicked="OnDesafio1Clicked" Margin="3" />
            <ImageButton Source="frutas.png" Aspect="Fill" CornerRadius="15" HeightRequest="68" WidthRequest="328" HorizontalOptions="Center" Clicked="OnDesafio2Clicked" Margin="3" />
            <ImageButton Source="objetos.png" Aspect="Fill" CornerRadius="15" HeightRequest="68" WidthRequest="328" HorizontalOptions="Center" Clicked="OnDesafio3Clicked" Margin="3" />
            <BoxView HeightRequest="20" Color="Transparent" /> <!-- Espacio de 20 unidades -->
            <Button Text="Salir" CornerRadius="15" WidthRequest="328" HorizontalOptions="Center" Clicked="OnSalirClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>