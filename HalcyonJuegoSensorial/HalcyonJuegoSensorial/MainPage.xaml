<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HalcyonJuegoSensorial.MainPage">

    <StackLayout Padding="10">
        <BoxView HeightRequest="150" Color="Transparent" /> <!-- Espacio de 150 unidades -->
        <Image Source="app_logo.png" HeightRequest="205" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center" />
        <BoxView HeightRequest="40" Color="Transparent" /> <!-- Espacio de 40 unidades -->
        <ImageButton Source="jugar.png" Aspect="Fill" CornerRadius="15" HeightRequest="68" WidthRequest="228" HorizontalOptions="Center" Clicked="OnIngresoClicked" Margin="10" />
    </StackLayout>

</ContentPage>
